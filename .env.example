# Server Configuration
PORT=8000
NODE_ENV=development

# ============================================
# AI Configuration - SIMPLIFIED FOR TESTING
# ============================================

# Option 1: Ollama Local (RECOMMENDED - Miễn phí, chạy offline)
USE_OLLAMA=true
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2  # hoặc: mistral, phi, gemma

# Option 2: OpenAI (Tốn phí - bỏ qua khi test)
USE_OLLAMA=false
OPENAI_API_KEY=  # Để trống khi dùng Ollama
OPENAI_MODEL=gpt-4-turbo-preview

# ============================================
# Facebook Graph API - BẮT BUỘC
# ============================================
FB_PAGE_ACCESS_TOKEN=your_facebook_page_access_token
FB_PAGE_ID=your_facebook_page_id

# Twitter API (Optional - có thể bỏ qua)
TWITTER_BEARER_TOKEN=

# Database
DATABASE_URL=./database/football_meme.db

# JWT Secret
JWT_SECRET=your_secret_key_here

# ============================================
# Content Settings - MANUAL MODE
# ============================================
AUTO_POST_ENABLED=false  # TẮT auto-post
MANUAL_MODE=true         # Chỉ post thủ công
POSTS_PER_DAY=5
NEWS_FETCH_INTERVAL=60   # Fetch tin mỗi 60 phút
